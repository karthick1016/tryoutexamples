<?xml version = "1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

<table name = "quote_item_file" resource = "default" engine = "innodb" comment = "Quote Item File Table">
    <column xsi:type="int" name="id" padding="11" unsigned="false" nullable="false" identity="true" comment="ID" />
    <column xsi:type="varchar" name="firstname" nullable="false" length="255" comment="FirstName" />
    <column xsi:type="varchar" name="lastname" nullable="false" length="255" comment="LastName" />
    <column xsi:type="varchar" name="method" nullable="false" length="255" comment="Method" />
    <column xsi:type="int" name="order_id" nullable="false" comment="OrderId" />
    <constraint xsi:type="primary" referenceId="PRIMARY">
        <column name="id" />
    </constraint>

</table>


</schema>